<% layout('./layout/page') -%>


<div class="content-body">
    <div class="container">
        <div class="row">
            <main class="col-md-12">
                <article class="post post-1">

                    <div class="entry-content clearfix">
                        <% if(yourcar.length > 0){%>
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Username</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <% yourcar.forEach(function(item){ %>
                            <tr>
                                <td><%= item.date%></td>
                                <td><%= item.timestart%></td>
                                <td><%= item.timeend%></td>
                                <td><%= item.username%></td>
                                <td>
                                     <span class="comments-link"><a href="/yourCar/<%= item._id %>">
                                            refuse
                                         </a></span>
                            </tr>
                            <% });%>
                            </tbody>
                        </table>
                        <% } else {%>
                        <p>Recors not found.</p>
                        <% } %>
                      </div>
                </article>


            </main>
        </div>
    </div>
</div>
